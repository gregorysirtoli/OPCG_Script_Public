env:
  PYTHONUNBUFFERED: "1"

  # Caricamento provider (modulo della repo privata clonata nel job)
  PROVIDERS_MODULE: private_providers.bundle

  # Tuning non sensibile
  PRICES_BATCH: "500"
  MONGO_PAGE_SIZE: "200"
  SAMPLE_LIMIT: "0"
  RATE_PER_SEC: "1.2"
  BURST: "10"
  LOG_LEVEL: "INFO"
  MAIL_SUBJECT: "[Ingestor] Report"

  # Facoltativo fallback cambio (se NON usi FX_API_URL)
  FX_FIXED_RATE: "1.15"

  # Secrets montati nell'env (li richiami cos√¨)
  MONGODB_URI: ${{ secrets.MONGODB_URI }}
  MONGODB_DB:  ${{ secrets.MONGODB_DB }}
  EMAIL_ADDRESS: ${{ secrets.EMAIL_ADDRESS }}
  EMAIL_PASSWORD: ${{ secrets.EMAIL_PASSWORD }}
  EMAIL_TO: ${{ secrets.EMAIL_TO }}
  MAIL_FROM: ${{ secrets.MAIL_FROM }}
  FX_API_URL: ${{ secrets.FX_API_URL }}
